<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="@dimen/size_dialog"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mini_padding"
        android:orientation="vertical"
        android:padding="@dimen/small_padding"
        android:gravity="center_horizontal">

            <TextView
                android:id="@+id/realtimeMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Real-time Mode"
                android:padding="@dimen/mini_padding"
                android:textColor="@color/ap_white"
                android:textSize="@dimen/text_title"
                android:background="@drawable/bg_text_title"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/pilotMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pilot Mode"
                android:textColor="@color/ap_white"
                android:textSize="@dimen/text_title"
                android:padding="@dimen/mini_padding"
                android:background="@drawable/bg_text_title"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/small_padding"/>
    </LinearLayout>

</LinearLayout>